<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    xmlns:android="http://schemas.android.com/apk/res/android">
	<RelativeLayout 
	    android:id="@+id/fc_rl_root"
	    android:layout_width="fill_parent"
	    android:layout_height="50dp" >

	 	<Button
	 	    android:id="@+id/fc_group_new"
	 	    android:layout_width="150dp"
	 	    android:layout_height="50dp"
	 	    android:layout_marginBottom="5dp"
	 	    android:layout_marginLeft="5dp"
	 	    android:layout_marginRight="5dp"
	 	    android:layout_marginTop="5dp"
	 	    android:layout_toLeftOf="@id/fc_rl_root"
	 	    android:background="@android:color/holo_blue_light"
	 	    android:text="@string/new_group"
	 	    android:textColor="@android:color/primary_text_light" />

	 	<Button
	 	    android:id="@+id/fc_friends_new"
	 	    android:layout_width="150dp"
	 	    android:layout_height="50dp"
	 	    android:layout_alignParentRight="true"
	 	    android:layout_alignRight="@id/fc_rl_root"
	 	    android:layout_marginBottom="5dp"
	 	    android:layout_marginLeft="5dp"
	 	    android:layout_marginRight="5dp"
	 	    android:layout_marginTop="5dp"
	 	    android:background="@android:color/darker_gray"
	 	    android:text="@string/new_friends"
	 	    android:textColor="@android:color/primary_text_light" />
	 	
 	</RelativeLayout>

    <ListView
        android:id="@+id/fc_group_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5px" />

</LinearLayout>