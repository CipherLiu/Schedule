<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailActivity" 
    xmlns:android="http://schemas.android.com/apk/res/android">

	<com.example.ui.DrawView
	    android:id="@+id/drawView_event_detail"
	    android:layout_width="wrap_content"
	    android:layout_height="350dp"
	    android:layout_marginLeft="0dp"
	    android:layout_marginTop="20dp"
	    android:paddingLeft="0dp"
	    android:paddingTop="0dp" 
	    android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/profile1_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="53dp"
        android:layout_alignParentLeft="true"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile2_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile3_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile4_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile5_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="135dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile6_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/drawView_event_detail"
        android:layout_marginLeft="175dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />
	   	<TextView
        android:id="@+id/tv_show_time_stamp"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"   
        android:layout_below="@+id/profile6_event_detail"
        android:textSize="20sp"
        android:textColor="#994422"
        />

</RelativeLayout>