<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_event_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EventDetailActivity" 
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout 
        android:id="@+id/root_drawView_event_detail"
        android:layout_width="match_parent"
    	android:layout_height="350dp"
        >
	    <com.example.schedule.DrawView
	        android:id="@+id/drawView_event_detail"
	        android:layout_width="wrap_content"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="0dp"
	        android:layout_marginTop="0dp"
	        android:paddingLeft="0dp"
	        android:paddingTop="0dp" />
	</LinearLayout>
    <ImageView
        android:id="@+id/profile1_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="53dp"
        android:layout_toRightOf="@+id/root_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile2_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile3_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="55dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile4_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="95dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile5_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="135dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageView
        android:id="@+id/profile6_event_detail"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/root_drawView_event_detail"
        android:layout_marginLeft="175dp"
        android:layout_toRightOf="@+id/profile1_event_detail"
        android:paddingLeft="0dp" />

    <ImageButton
        android:id="@+id/previous_event_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile1_event_detail"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/root_event_detail"
        android:background="@android:color/transparent"
        android:paddingLeft="0dp"
        android:src="@drawable/previous" />

    <ImageButton
        android:id="@+id/next_event_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profile6_event_detail"
        android:layout_below="@+id/profile1_event_detail"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:paddingLeft="0dp"
        android:src="@drawable/next" />

</RelativeLayout>