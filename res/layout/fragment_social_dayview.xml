<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@+drawable/page_bg"
       android:layout_marginTop="5dp" >
        <ImageView
           android:id="@+id/iv_user_image_2"
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:layout_alignParentLeft="true"
           android:layout_alignParentTop="true"
           android:background="@drawable/ic_launcher"
           android:focusable="false" />
        <TextView
            android:id="@+id/tv_friend_name_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/iv_user_image_2"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="Lucy"/>
        <TextView
           android:id="@+id/tv_time_2"
       	   android:layout_width="wrap_content"
		   android:layout_height="wrap_content"
		   android:layout_below="@+id/tv_friend_name_2"
		   android:layout_toRightOf="@+id/iv_user_image_2"
           android:background="#bfbfbf"
           android:paddingBottom="4dp"
           android:paddingLeft="4dp"
       	   android:paddingRight="4dp"
           android:paddingTop="4dp"
           android:layout_marginTop="2dp"
           android:layout_marginBottom="2dp"
           android:text=" 12-03-04 11:52"
           android:textColor="#ffffff"
           android:textSize="12sp" />


        <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="5dp"
           android:layout_toRightOf="@+id/iv_user_image_2"
           android:layout_below="@+id/tv_time_2"
           android:background="@+drawable/event_bg"
           android:clickable="true"
           android:focusable="true"
           android:lineSpacingExtra="2dp"
           android:minHeight="50dp"
           android:textColor="#ff000000"
           android:textSize="14sp">
           <TextView 
               android:id="@+id/tv_content_2"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:text="I will be travelling in Beijing tomorrow."/>
	</RelativeLayout>        
</RelativeLayout>
