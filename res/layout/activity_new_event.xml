       		<RelativeLayout
        	    android:layout_width="fill_parent"
        		android:layout_height="wrap_content">
        	    <TextView 
        	        android:id="@+id/tv_record"
        	        android:layout_height="wrap_content"
        	        android:layout_width="80dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:layout_marginRight="2dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/record"
        	        android:layout_alignParentLeft="true"/>
        	    <com.example.schedule.RecordButton
        	        android:id="@+id/btn_record"
        	        android:src="@drawable/record"
        	        android:layout_width="match_parent"
        	        android:layout_height="wrap_content"
        	        android:layout_marginRight="5dp"
        	        android:layout_toLeftOf="@+id/btn_record_play"
        	        android:layout_below="@+id/tv_record"/>
        	    <ImageButton
        	        android:id="@+id/btn_record_play"
        	        android:src="@drawable/record_play"
        	        android:layout_width="48dp"
        	        android:layout_height="48dp"
        	        android:layout_marginRight="5dp"
        	        android:layout_alignParentRight="true"
        	        android:contentDescription="@string/record"
        	        android:layout_below="@+id/tv_record"/>
       		</RelativeLayout>
       		<RelativeLayout
        	    android:layout_width="fill_parent"
        		android:layout_height="wrap_content">
        	    <TextView 
        	        android:id="@+id/tv_photo"
        	        android:layout_height="wrap_content"
        	        android:layout_width="80dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:layout_marginRight="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/photo"
        	        android:layout_alignParentLeft="true"/>
        	    <ImageView
        	        android:layout_height="128dp"
        	        android:id="@+id/iv_photo"
        	        android:layout_width="128dp"
        	        android:layout_marginRight="5dp"
        	        android:layout_below="@+id/tv_photo"
        	        android:layout_alignParentLeft="true"
        	        android:src="@drawable/no_event_photo"
        	        android:contentDescription="@string/photo"
        	        android:clickable="true"/>
         	    <ImageButton
        	        android:id="@+id/btn_gallery"
        	        android:src="@+drawable/gallery"
        	        android:layout_width="48dp"
        	        android:layout_height="48dp"
        	        android:layout_marginRight="5dp"
        	        android:layout_alignParentRight="true"
        	        android:layout_below="@+id/tv_photo"
	       	        android:contentDescription="@string/photo"/> 
        	    <ImageButton
        	        android:id="@+id/btn_camera"
        	        android:src="@+drawable/camera"
        	        android:layout_width="48dp"
        	        android:layout_height="48dp"
        	        android:layout_marginRight="5dp"
        	        android:layout_alignParentRight="true"
        	        android:layout_below="@+id/btn_gallery"
        	        android:contentDescription="@string/photo"/>
       		</RelativeLayout>
       </LinearLayout>
      </ScrollView>