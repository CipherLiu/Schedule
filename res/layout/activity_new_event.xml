<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
       <LinearLayout  
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:id="@+id/new_event_root"
        	android:orientation="vertical"
        	android:background="@+drawable/page_bg">
        	<TextView 
        	    	android:id="@+id/tv_new_event_date"
        	    	android:layout_width="wrap_content"
        	    	android:layout_height="wrap_content"
        	    	android:layout_gravity="center_horizontal"
        	    	android:textSize="20sp"
        	    	android:layout_marginLeft="5dp"
        	    	android:textIsSelectable="true"
        	    	android:textColor="#900510"
        	    	android:textStyle="bold"/>
        	<LinearLayout 
        	    android:layout_width="fill_parent"
        	    android:layout_height="wrap_content"
        	    android:orientation="vertical">
        	    <TextView 
        	    	android:layout_height="wrap_content"
        	        android:layout_width="wrap_content"        	        
        	        android:layout_marginLeft="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/new_event_group_name"/>
        	    <Spinner 
        	        android:id="@+id/sp_group"
					android:layout_width="fill_parent"
					android:layout_height="fill_parent"
					android:text="@+string/all"
					android:drawSelectorOnTop="true" 
					android:prompt="@+string/choose_group"/>
        	</LinearLayout>
        	<LinearLayout 
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        	    <TextView 
        	        android:id="@+id/tv_event_name"
        	        android:layout_height="wrap_content"
        	        android:layout_width="90dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/event_name"/>
        	    <EditText
        	        android:hint="@+string/event_name"
        	        android:layout_height="wrap_content"
        	        android:id="@+id/et_event_name"
        	        android:layout_width="fill_parent"
        	        android:layout_marginRight="5dp"/>
        	</LinearLayout>
        	<LinearLayout 
        		android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        	    <TextView 
        	        android:id="@+id/tv_event_description"
        	        android:layout_height="wrap_content"
        	        android:layout_width="90dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/description"/>
        	    <EditText
        	        android:hint="@+string/description"
        	        android:layout_height="wrap_content"
        	        android:id="@+id/et_description"
        	        android:layout_width="fill_parent"
        	        android:layout_marginRight="5dp"/>
        	</LinearLayout>
        	<LinearLayout 
        	    android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        	    <TextView 
        	        android:id="@+id/tv_from"
        	        android:layout_height="wrap_content"
        	        android:layout_width="50dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/from"/>
        	    <LinearLayout 
        	        android:orientation="horizontal"
        	        android:layout_width="fill_parent"
        			android:layout_height="wrap_content">
        	        <Button 
        	        	android:id="@+id/btn_from_date"
        	        	android:layout_height="wrap_content"
        	        	android:layout_width="150dp"
        	        	android:layout_marginRight="5dp"/>
        	    	<Button 
        	        	android:id="@+id/btn_from_time"
        	        	android:layout_height="wrap_content"
        	        	android:layout_width="match_parent"
        	        	android:layout_marginRight="5dp"/>
        	    </LinearLayout>
        	</LinearLayout>
            <LinearLayout 
        	    android:layout_width="fill_parent"
        		android:layout_height="wrap_content"
        		android:orientation="vertical">
        	    <TextView 
        	        android:id="@+id/tv_to"
        	        android:layout_height="wrap_content"
        	        android:layout_width="50dp"        	        
        	        android:layout_marginLeft="5dp"
        	        android:textSize="12sp"
        	        android:textStyle="bold"
        	        android:text="@+string/to"/>
        	    <LinearLayout 
        	        android:orientation="horizontal"
        	        android:layout_width="fill_parent"
        			android:layout_height="wrap_content">
        	    	<Button 
        	        	android:id="@+id/btn_to_date"
        	        	android:layout_height="wrap_content"
        	        	android:layout_width="150dp"
        	        	android:layout_marginRight="5dp"/>
        	    	<Button 
        	        	android:id="@+id/btn_to_time"
        	        	android:layout_height="wrap_content"
        	        	android:layout_width="match_parent"
        	        	android:layout_marginRight="5dp"/>  
        	    </LinearLayout>    	            	    
        	</LinearLayout>
