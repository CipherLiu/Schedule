<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.schedule"
    android:versionCode="1"
    android:versionName="1.0" >
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="15" />
    <application
        android:icon="@+drawable/logo_72"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.schedule.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.schedule.LoginActivity"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.Holo.NoActionBar">
        </activity>
        <activity
            android:name="com.example.schedule.RegisterActivity"
            android:label="@string/title_activity_register"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.example.schedule.NewEventActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.schedule.DateActivity"
            android:label="@string/title_activity_date"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.example.schedule.GuideActivity"
            android:label="@string/title_activity_guide"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.Holo.NoActionBar"/>
        <activity
            android:name="com.example.schedule.WelcomeActivity"
            android:screenOrientation="portrait" 
            android:theme="@android:style/Theme.Holo.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.schedule.EventActivity"
            android:label="@string/title_activity_event"
            android:screenOrientation="portrait" />
    </application>

</manifest>